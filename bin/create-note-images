#!/usr/bin/env php
<?php declare(strict_types=1);

require_once __DIR__ . '/../vendor/autoload.php';

use Crazko\Site\TextToImage\Image;
use Nette\Utils\Finder;

function getTitle($content) {
	preg_match_all("/title: (.*)/", (string) $content, $titles);
	$title = $titles[1][0];

	if (in_array(substr($title, -1), ['\'', '"']) && substr($title, 0, 1) === substr($title, -1)) {
		return substr($title, 1, -1);
	}

	return $title;
}

foreach(Finder::findFiles('*.md')->from(__DIR__ . '/../src/_posts') as $path => $file) {
	$content = file_get_contents($path);

	if (preg_match("/promoImage/", $content)) {
		continue;
	}

	$title = getTitle($content);
	$image = (new Image($title))->get();
	$imageName = substr($file->getFilename(), 11, -3);

	$image->save(sprintf('%s/../src/assets/posts/%s.png', __DIR__, $imageName), 7);
}
