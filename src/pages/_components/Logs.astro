---
import { getCollection } from 'astro:content';
import Log from '../../components/Log.astro';

const data = await getCollection('log');
const logs = data.reverse();
---

<div class="logs" style={{ counterReset: `log ${logs.length + 1}` }}>
  {logs.map(async (log) => <Log id={log.slug} isWithLink />)}
</div>
