---
import { Sprite } from 'astro-icon';
import Layout from './Layout.astro';
import Container from '../components/Container.astro';
import Time from '../components/Time.astro';

const { frontmatter } = Astro.props;
const { title, readingTime, githubEdit, date } = frontmatter;
---

<!-- TODO: -->
<Layout description={'' /* excerpt */} image={`` /* `assets/posts/${slug}.png` */} isPost title={title}>
  <Container>
    <article class="article">
      <header>
        <h1 class="p-name">{title}</h1>

        <ul class="meta">
          {
            date ? (
              <li class="meta__item">
                <a href={Astro.url} class="text-secondary text-border-none u-url">
                  <Sprite name="mdi:calendar-month" aria-label="reading time" class="text-default" />
                  <Time date={date} />
                </a>
              </li>
            ) : null
          }
          <li class="meta__item">
            <Sprite name="mdi:clock-outline" aria-label="reading time" class="text-default" />
            {readingTime}
          </li>
          <li class="meta__item">
            <a href={githubEdit} class="text-secondary text-border-none">
              <Sprite name="mdi:file-document-edit-outline" aria-hidden="true" class="text-default" />
              suggest an edit</a
            >
          </li>
        </ul>
      </header>
      <div class="e-content">
        <slot />
      </div>
      <footer>
        <div class="post__signature">Roman</div>
      </footer>
    </article>
  </Container>
</Layout>
